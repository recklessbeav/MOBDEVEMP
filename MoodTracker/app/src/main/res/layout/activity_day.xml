<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DayActivity">

    <ImageView
        android:id="@+id/iv_day"
        android:src="@drawable/sad_face"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_day_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_day_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textColor="@color/sad"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_day_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_day_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="November"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_day_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_day_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manila"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_day_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_day_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>